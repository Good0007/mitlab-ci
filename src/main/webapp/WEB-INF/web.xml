        <init-param>
            <param-name>MWF</param-name>
            <param-value>mitlab/MWF</param-value>
        </init-param>




        <!-- zbox action to gitlab issue action-->
        <init-param>
            <param-name>zboxAction:opened</param-name>
            <param-value>,todo</param-value>
        </init-param>
        <init-param>
            <param-name>zboxAction:started</param-name>
