        <init-param>
            <param-name>zboxAction:activated</param-name>
            <param-value>reopen,</param-value>
        </init-param>
        <init-param>
            <param-name>zboxAction:closed</param-name>
            <param-value>close,</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>zboxServlet</servlet-name>
        <url-pattern>/zbox.do</url-pattern>
